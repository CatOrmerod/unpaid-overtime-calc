<div class="row justify-content-md-center">
    <div class="col-md-5 mb-5 ">
        <form class="form-signin signup-form">
            <h1 class="h3 mb-3 text-white font-weight-normal">Signup</h1>
            <label for="name-signup" class="sr-only">Name</label>
            <input type="text" id="name-signup" class="form-control mb-3" placeholder="Your Name" required>

            <label for="email-signup" class="sr-only">Email address</label>
            <input type="email" id="email-signup" class="form-control mb-3" placeholder="Email address" required
                autofocus>

            <label for="password-signup" class="sr-only">Password</label>
            <input type="password" id="password-signup" class="form-control mb-3" placeholder="Password" required>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
    </div>

</div>