                        <label class="text-white mb-2">Annual salary: <span>*</span>&nbsp;</label>
                        <input type="text" placeholder="60000" class="form-control mb-3" name="salary" id="salary-gross" required />

                        <label class="text-white mb-2">Do you take lunch? <span>*</span>&nbsp;</label>
                        <br>
                        <div class="form-check form-check-inline">
                            <input v-model="yeslunch" class="form-check-input" type="radio" name="inlineRadioOptions"
                                checked="checked" id="inlineRadio1" value="yeslunch">
                            <label class="text-white form-check-label" for="inlineRadio1">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
