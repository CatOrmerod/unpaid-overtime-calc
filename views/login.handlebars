<div class="row justify-content-md-center">
    <div class="col-md-5 mb-5 ">
        <form class="form-signin login-form">
            <h1 class="h3 mb-3 text-white font-weight-normal">Sign in</h1>
            <label for="email-login" class="sr-only">Email address</label>
            <input type="email" id="email-login" class="form-control mb-3" placeholder="Email address" required
                autofocus>

            <label for="password-login" class="sr-only">Password</label>
            <input type="password" id="password-login" class="form-control mb-3" placeholder="Password" required>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>

</div>