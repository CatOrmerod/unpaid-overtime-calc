<div class="row justify-content-md-center mb-5">
  <div class="col">
    <button type="submit" onclick="myFunction()" class="btn btn-danger">See by industry</button>
  </div>
</div>
<div id="industry" class="row justify-content-md-center">
  <div class="col">
    {{#each users2 as | user |}}
    <div class="card mb-3">

      <h5 class="card-header">{{industry}}</h5>
      <div class="card-body">
        <h5 class="card-title">Unpaid Hours: {{numberWithCommas total_unpaid_hours}}</h5>
        <h5 class="card-title">Unpaid Salary: ${{numberWithCommas total_unpaid_salary}}</h5>
        
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script>
  function myFunction() {
    var x = document.getElementById("industry");
    if (x.style.display === "block") {
      x.style.display = "none";
    } else {
      x.style.display = "block";
    }
  }
</script>